<div class="col-md-4">
  <div class="card" data-id="<%= portfolio_item.id %>">
           <%=   image_tag portfolio_img(portfolio_item.thumb_image, 'thumb'), width: '100%' %> 
            <p class="card-text"> <span>  <%=  link_to portfolio_item.title, portfolio_show_path(portfolio_item.id) %> </span> <p> <%= portfolio_item.subtitle %> </p>  </p>
          </div>
 
</div>

         






<%= link_to "Edit", edit_portfolio_path(portfolio_item.id) if logged_in?(:site_admin) %>
<%= link_to 'Delete', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' }if logged_in?(:site_admin) %>