

<%= form_for(@portfolio_item) do |f| %>
<div class= "row">
<div class="col md-12">
  

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :subtitle %>
    <%= f.text_area :subtitle, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label class="btn btn-primary">
      Upload a main image file <%= f.file_field :main_image, style: 'display:none' %>
    </label>
    
  </div>
  
  <div class="form-group">
    <label class="btn btn-primary">
      Upload a thumb image file <%= f.file_field :thumb_image, style: 'display:none' %>
    </label>
    
  </div>

 <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: 15  %>
  </div>



<div style="border-left:1px solid #ececec;height:750px;padding:20px" >
  <vr>
  <h3>
  Technologies Used
</h3>

  <%= f.fields_for :technologies do |technology_form| %>
<%= render 'technology_fields', f: technology_form %>
  <% end %>
  <div>
    <%= link_to_add_association 'Add Technology', f, :technologies%>?
  </div>

  <div class="form-group">
    <%= f.submit 'Save', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>

</div> 







  </div>
</div>