<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
   <%= blog.errors.full_message.each do |error| %>
   <%= js add_gritter(error, :title =>  "Jack Leonard", sticky: false) %>
  <% end %>

  <div class="form-group">
    
    <%= f.text_field :title, class: 'form-control', placeholder: 'Title'  %>
  </div>

  <div class="form-group">
    
    <%= f.text_area :body, class: 'form-control', rows: 25, placeholder: 'Content'   %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>
