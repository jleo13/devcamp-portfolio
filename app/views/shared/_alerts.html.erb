<% if flash[:alert] %>
<%= js add_gritter(flash[:alert], :title =>  "Jack Leonard", sticky: false, time: 500) %>

<% elsif flash[:error] %>
<%= js add_gritter(flash[:error], :title =>  "Jack Leonard", sticky: false) %>

<% else %>
<%= js add_gritter(flash[:notice], :title =>  "Jack Leonard", sticky: false, time: 500) %>
<% end %>